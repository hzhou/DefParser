subcode: print_vm_c(var)
    $call vm_hash_labels, $vm
    my $n=@$vm;
    $call do_print, "struct VMInst $(var)[$n]= {"
    my $addr=0
    $foreach $l in @$vm
	my $t=join(", ", @$l)
	$if $labelhash{$addr}
	    $call do_print, "    /* $addr */"
	$call do_print, "    $t,"
	$addr++
    $call do_print, "};"

subcode: vm_hash_labels(vm)
    my %labelhash
    $foreach $l in @$(vm)
	$if $l->[0] eq "Jmp"
	    $labelhash{$l->[2]}=1
	$elif $l->[0] eq "Split"
	    $labelhash{$l->[2]}=1
	    $labelhash{$l->[3]}=1

